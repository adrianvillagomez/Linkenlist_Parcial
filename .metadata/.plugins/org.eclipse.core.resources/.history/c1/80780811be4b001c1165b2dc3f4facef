#include <stdio.h>
#include <stdlib.h>
#include "Parser.h"

int parser_arcadeFromText(FILE* pFile,LinkedList* pArrayListArcade)
{
	int rtn =-1;
	Arcade* pArcade;
	char auxId[150];
	char auxNacionalidad[200];
	char auxTipoDeSonido[200];
	char auxCantidadJugadores[200];
	char auxCapacidadMaximaFichas[200];
	char auxNombreDeSalonAlQuePertenece[200];
	char auxNombreDelJuegoQueContiene[200];
	int banderaDelPrimero=1;
	int auxScanf;
	///
	char 1auxNacionalidad[63];
	int 1auxTipoDeSonido;
	int 1auxCantidadJugadores;
	int 1auxCapacidadMaximaFichas;
	char 1auxNombreDeSalonAlQuePertenece[63];
	char 1auxNombreDelJuegoQueContiene[63];
	int 1auxId;
	if(pFile!=NULL)
	{
		while(!feof(pFile))
		{
			if(banderaDelPrimero)
			{
				fscanf(pFile,"%[^,],%[^,],%[^,],%[^,],%[^,],%[^,],%[^\n]\n",auxId,auxNacionalidad,auxTipoDeSonido,auxCantidadJugadores,auxCapacidadMaximaFichas,auxNombreDeSalonAlQuePertenece,auxNombreDelJuegoQueContiene);
				banderaDelPrimero=0;
			}
			auxScanf=fscanf(pFile,"%[^,],%[^,],%[^,],%[^,],%[^,],%[^,],%[^\n]\n",auxId,auxNacionalidad,auxTipoDeSonido,auxCantidadJugadores,auxCapacidadMaximaFichas,auxNombreDeSalonAlQuePertenece,auxNombreDelJuegoQueContiene);
			if(auxScanf==7)
			{
				//printf("Lei: %s %s %s %s %s %s %s \n",auxId,auxNacionalidad,auxTipoDeSonido,auxCantidadJugadores,auxCapacidadMaximaFichas,auxNombreDeSalonAlQuePertenece,auxNombreDelJuegoQueContiene);
				pArcade=arcade_newParametros(auxId, auxNacionalidad, auxTipoDeSonido, auxCantidadJugadores, auxCapacidadMaximaFichas, auxNombreDeSalonAlQuePertenece, auxNombreDelJuegoQueContiene);
				//printf("id:%d\n",pArcade->id);
				if(pArcade!=NULL)
				{
				ll_add(pArrayListArcade, pArcade);
				for (int i = 0; i < ll_len(pArrayListArcade); i++)
				{
					pArcade= ll_get(pArrayListArcade, i);
					arcade_getNacionalidad(pArcade, 1auxNacionalidad);
					arcade_getTipoDeSonido(pArcade, &1auxTipoDeSonido);
					arcade_getCantidadJugadores(pArcade, &1auxCantidadJugadores);
					arcade_getCapacidadMaximaFichas(pArcade, &1auxCapacidadMaximaFichas);
					arcade_getNombreDeSalonAlQuePertenece(pArcade, 1auxNombreDeSalonAlQuePertenece);
					arcade_getNombreDelJuegoQueContiene(pArcade, 1auxNombreDelJuegoQueContiene);
					arcade_getId(pArcade,&1auxId);
					switch(auxTipoDeSonido)
					{
					case 1:
					printf("    [%4d] [%10s]             [STEREO]        [%10d]         [%10d]                [%10s]                      [%10s]\n",1auxId,1auxNacionalidad,1auxCantidadJugadores,1auxCapacidadMaximaFichas,1auxNombreDeSalonAlQuePertenece,1auxNombreDelJuegoQueContiene);
					break;
					case 2:
					printf("    [%4d] [%10s]             [MONO]        [%10d]         [%10d]                  [%10s]                        [%10s]\n",1auxId,1auxNacionalidad,1auxCantidadJugadores,1auxCapacidadMaximaFichas,1auxNombreDeSalonAlQuePertenece,1auxNombreDelJuegoQueContiene);
					break;
					}
				}
				rtn=0;
				}
			}
		}
	}
	return rtn;
}
